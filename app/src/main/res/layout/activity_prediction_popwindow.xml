<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/the_film_details_shape"
        >
        <TextView
            android:id="@+id/activity_details_timesss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预告片"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            />
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/activity_details_timesss"
            android:background="@drawable/details_bgs"
            />
        <ImageView
            android:id="@+id/activity_prediction_popwindow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/com_icon_down_default"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="300dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_prediction_popwindow_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            ></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
