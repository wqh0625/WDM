<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="24dp">

    <TextView
        android:id="@+id/fktttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/fkll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fktttt"
        android:layout_marginTop="25dp"
        android:background="@drawable/beijingxuhua">

        <EditText
            android:id="@+id/feedback_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@null"
            android:hint="写下您对产品的感受吧！工作人员将会在第一时间评估处理"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/feedback_tijiao_btn"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_below="@id/fkll"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/details_bgs"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/back_image_f"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/com_icon_my_default" />

</RelativeLayout>