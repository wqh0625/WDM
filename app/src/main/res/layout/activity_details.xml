<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.com.wdmoviedemo.view.DetailsActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dw"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_location"
            android:text="北京"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="30dp"
            />
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:background="@drawable/home_searchs"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/com_icon_search_default_hdpi"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="铁血战士"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:textSize="12sp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="搜索"/>

        </LinearLayout>

    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/top"
       android:layout_marginTop="16dp">
       <TextView
           android:layout_width="83dp"
           android:layout_height="25dp" />
   </RelativeLayout>

</RelativeLayout>
