<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:background="@drawable/the_film_details_shape">

        <TextView
            android:id="@+id/_timesss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:text="选择支付方式"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ay_pop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/com_icon_down_default" />

        <ImageView
            android:id="@+id/wx"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/pay_icon_weixin_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="72dp"
            android:layout_toRightOf="@+id/wx"
            android:text="微信支付"
            android:textColor="#333"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/wxzf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ay_pop_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/zfb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/pay_icon_zhifubao_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="107dp"
            android:layout_toRightOf="@+id/zfb"
            android:text="支付宝支付"
            android:textColor="#333"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wxzf"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/xiadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="42dp"
            android:background="@drawable/loginbutton"
            android:text="立即下单"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
