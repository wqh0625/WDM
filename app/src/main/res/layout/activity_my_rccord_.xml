<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_rccord_dfk"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/details_back"
            android:gravity="center"
            android:text="待付款" />

        <TextView
            android:id="@+id/my_rccord_yfk"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/txt_Cinemax"
            android:background="@drawable/details_back"
            android:gravity="center"
            android:text="已完成" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/my_rccord_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_lucency">

    </RelativeLayout>
    <ImageView
        android:id="@+id/back_image_r"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/com_icon_my_default" />
</RelativeLayout>
