<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bw.movie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="demo.com.wdmoviedemo.core.utils.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/log_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/log_icon"
        android:supportsRtl="true"
        android:theme="@style/TranslucentTheme">
        <activity android:name="demo.com.wdmoviedemo.view.HomeActivity" />
        <activity android:name="demo.com.wdmoviedemo.view.LoginActivity" />
        <activity android:name="demo.com.wdmoviedemo.view.RegisterActivity" />
        <activity android:name="demo.com.wdmoviedemo.view.GuidanceActivity" />

        <activity android:name="demo.com.wdmoviedemo.view.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>